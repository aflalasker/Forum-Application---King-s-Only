<% if !@topic.category.name.include?('Staff') || session[:role] == 1 %>   
<% @page_title = "New Post" %>

<%# This file is for creating a new post as a user can create a new post if he wished to %>

<div>
 
    <div class="panel panel-default" style="margin-top:5px;">
      <div class="panel-heading niceGoogleFont" style="background-color:black; color:red;">New Post</div> <%# This uses styling of black and red %>
      <div class="panel-body">
          <div style="margin-bottom:15px;">Please <strong>insert</strong> content for new post in topic: <span class="label label-primary" style="background-color:red; font-size:14px; color:white; border-style:none;"><%= @topic.name %></span></div>
          <%= form_for(:post, :url => {:action => 'create', :topic_id => @topic.id}, :style => '') do |f| %>
          <%= render(:partial => "form", :locals => {:f => f}) %>      
      </div>
    </div>

<%# This submit tag allows the user to do a new post %>
      <div style="float:right;">
          <%= submit_tag("New Post", :class => 'backDeleteButton') %>
      </div>
     
     <%# This background color is still consistent using the color white with font red %>
      <% end %>
   <button class="btn btn-default" style="background-color:#d10006; color:white;"><%= link_to("Back", {:topic_id => @topic.id, :action => 'index'}, :class => 'redButtonsWhiteFont') %></button>
</div>
<% end %>